---
import Octopus from "./octopus.astro";
import "../styles/global.css";
---

<head>
  <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body>
  <div class="bg-gray-100 w-full min-h-screen flex items-center justify-center">
    <div class="w-full py-8">
      <div class="flex items-center justify-center space-x-2">
        <div class="w-12 h-12">
          <Octopus />
        </div>
      </div>
      <div
        class="bg-white w-5/6 md:w-3/4 lg:w-2/3 xl:w-[500px] 2xl:w-[550px] mt-8 mx-auto px-16 py-8 rounded-xl shadow-lg"
      >
        <h2 class="text-center text-2xl font-bold tracking-wide text-gray-900">
          Sign Up
        </h2>
        <p class="text-center text-sm text-gray-600 mt-2">
          Already have an account?
          <a
            href="#"
            @click.prevent="showSignIn = true"
            class="text-purple-600 hover:text-purple-500 font-medium transition-colors">
            Sign in here
          </a>
        </p>

        <form class="my-8 text-sm" novalidate>
          <!-- Name -->
          <div class="flex flex-col my-4">
            <label for="name" class="text-gray-700">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="mt-2 p-2 border border-gray-300 rounded-lg text-gray-900
                     focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500
                     transition-all placeholder-gray-400"
              placeholder="Enter your name"
              required
              minlength="2"
            />
          </div>

          <!-- Email -->
          <div class="flex flex-col my-4">
            <label for="email" class="text-gray-700">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              class="mt-2 p-2 border border-gray-300 rounded-lg text-gray-900
                     focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500
                     transition-all placeholder-gray-400"
              placeholder="Enter your email"
              required
            />
          </div>

          <!-- Password -->
          <div class="flex flex-col my-4">
            <label for="password" class="text-gray-700">Password</label>
            <div
              x-data="{ show: false }"
              class="relative flex items-center mt-2"
            >
              <input
                :type=" show ? 'text' : 'password' "
                id="password"
                name="password"
                class="flex-1 p-2 pr-10 border border-gray-300 rounded-lg text-gray-900
                       focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500
                       transition-all placeholder-gray-400"
                placeholder="Enter your password"
                required
                minlength="6"
              />
              <button
                type="button"
                @click="show = !show"
                class="absolute right-2 bg-transparent flex items-center justify-center text-gray-600 hover:text-gray-800 transition-colors"
              >
                <svg
                  x-show="!show"
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M3 3l3.59 3.59A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411L21 21"
                  >
                  </path>
                </svg>

                <svg
                  x-show="show"
                  style="display: none;"
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                  ></path>
                </svg>
              </button>
            </div>
          </div>

          <!-- Confirm Password -->
          <div class="flex flex-col my-4">
            <label for="password_confirmation" class="text-gray-700"
              >Password Confirmation</label
            >
            <input
              type="password"
              id="password_confirmation"
              name="password_confirmation"
              class="mt-2 p-2 border border-gray-300 rounded-lg text-gray-900
                     focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500
                     transition-all placeholder-gray-400"
              placeholder="Enter your password again"
              required
              minlength="6"
            />
          </div>

          <!-- Terms -->
          <div class="flex items-center">
            <input
              type="checkbox"
              id="remember_me"
              class="mr-2 rounded border-gray-300 text-purple-600 focus:ring-purple-500"
              required
            />
            <label for="remember_me" class="text-gray-700">
              I accept the
              <a
                href="#"
                class="text-purple-600 hover:text-purple-500 hover:underline transition-colors"
                >terms</a
              >
              and
              <a
                href="#"
                class="text-purple-600 hover:text-purple-500 hover:underline transition-colors"
                >privacy policy</a
              >
            </label>
          </div>

          <!-- Submit -->
          <div class="my-6">
            <button
              type="submit"
              class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-2.5 rounded-lg transition-colors cursor-pointer"
            >
              Sign Up
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
